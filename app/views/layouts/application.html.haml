!!! Strict
%html{ html_attrs("en_us") }
  %head
    %title 
      WP Automator &mdash;
      = yield(:page_title) || yield(:title) || "Admin Interface"
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }/
    = javascript_include_tag 'jquery/jquery', 'application'
    = stylesheet_link_tag 'reset', 'application'
    = yield :head
  %body{:id => controller.controller_name, :class => controller.action_name}
    #header
      = link_to 'WP Automator', root_path, :id => 'site-name'
      
    = render :partial => 'shared/navigation'
    
    #content-title
      %h1= yield :title
      %span.meta= yield :meta
    - if action_bar = yield(:action_bar)
      #action-bar
        = action_bar
    #content      
      = render :partial => 'shared/flash_messages', :locals => {:flash => flash}
      = yield
    #footer
      Powered by WP Automator. This site looks its best when using a modern browser.
    = yield :scripts